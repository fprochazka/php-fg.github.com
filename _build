#!/usr/bin/env ruby
# encoding: utf-8

# A script for programmatically generating PRS and translation pages for php-fg.org

PRS_DIR  = File.join(File.dirname(__FILE__), '_includes', 'fg-standards', 'accepted')
EXTRAS   = ['meta', 'examples']

raise 'Run "git submodule init"' unless File.directory?(PRS_DIR)

Dir["#{PRS_DIR}/*.md"].sort.each do |original|
  # Skip the meta and example files
  next if File.basename(original) =~ Regexp.new("-(#{EXTRAS.join('|')})\\.md$")

  # Skip non-PRS files?
  next unless File.basename(original) =~ /^PRS-(\d+)\b/

  num   = $1
  title = File.read(original).split(/[\n\r]/).first.sub(/^#\s*/, '')

  pages = [
    {
      :name  => 'English (official)',
      :path  => "/prs/prs-#{num}",
      :title => "PRS-#{num} â€” #{title}",
      :disc  => false,
      :inc   => original.sub(%r{.*/fg-standards/}, 'fg-standards/'),
    }
  ]

  pages.each do |page|
    links = []
    pages.each do |other|
      links << " - name: #{other[:name]}"
      links << "   path: #{other[:path]}" unless other[:path] == page[:path]
    end

    File.open(".#{page[:path]}/index.md", 'w') do |f|
      f << <<-EOS.gsub(/^ {8}/, '')
        ---
        # This file is automatically generated by `_build`.
        layout:     prs
        title:      #{page[:title]}
        ---
        {% include #{page[:inc]} %}
      EOS
    end
  end
end
